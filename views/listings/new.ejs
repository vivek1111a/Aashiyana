<% layout("/layout/boilerplate") %>
<% block('head').append('<link rel="stylesheet" href="/edit.css" />') %>
<body>
  <h3>Give me new entry</h3>

  <form action="/listings" method="POST" class="form-group">

    <div class="form-group row inputtitle">
    <label for="title" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title">
    </div>
  </div>

      <div class="form-group row inputtitle">
      <label for="image" class="col-sm-2 col-form-label">Image</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="image" name="image.url">
      </div>
    </div>

    <div class="inputtitle mb-3">
    <label class="mb-1" for="description">Description</label>
    <textarea name="description" id="description" cols="50" rows="10" class="form-control"></textarea>
</div>

      <div class="form-group row inputtitle">
      <label for="price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="price"name="price">
      </div>
    </div>

    <div class="form-group row inputtitle">
      <label for="location" class="col-sm-2 col-form-label">Location</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="location" name="location">
      </div>
    </div>

    <div class="form-group row inputtitle">
      <label for="country" class="col-sm-2 col-form-label">Country</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="country"  name="country">
      </div>
      <button class="btn btn-info">Add</button>
    </div>

  </form>
</body>
