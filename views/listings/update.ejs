<% layout("/layout/boilerplate") %>
<!--  -->
<% block('head').append('<link rel="stylesheet" href="/edit.css" />') %>
<body>
  <form
    action="/listing/<%= listedit._id  %>/?_method=PUT"
    method="POST"
    class="form-group needs-validation"
    novalidate
  >
    <div class="form-group row inputtitle pt-4">
      <label for="title" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="title"
          name="title"
          value="<%= listedit.title %>"
          required
        />
        <div class="valid-feedback">Looks good</div>
        <div class="invalid-feedback">Give me a catchy title</div>
      </div>
    </div>

    <div class="form-group row inputtitle">
      <label for="image" class="col-sm-2 col-form-label">Image</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="image"
          name="image.url"
          value="<%= listedit.image.url %>"
        />
      </div>
    </div>

    <div class="inputtitle mb-3">
      <label class="mb-1" for="description">Description</label>
      <textarea
        name="description"
        id="description"
        cols="50"
        rows="10"
        class="form-control"
        required
      >
<%= listedit.description %></textarea
      >
      <div class="valid-feedback">Description looks good</div>
      <div class="invalid-feedback">Describe your listing in few words</div>
    </div>

    <div class="form-group row inputtitle">
      <label for="price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="price"
          name="price"
          value="<%= listedit.price %>"
          required
        />
        <div class="valid-feedback">Price looks good</div>
        <div class="invalid-feedback">Price can not be empty</div>
      </div>
    </div>

    <div class="form-group row inputtitle">
      <label for="location" class="col-sm-2 col-form-label">Location</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="location"
          name="location"
          value="<%= listedit.location %>"
          required
        />
        <div class="valid-feedback">Location looks good</div>
        <div class="invalid-feedback">Give me location</div>
      </div>
    </div>

    <div class="form-group row inputtitle">
      <label for="country" class="col-sm-2 col-form-label">Country</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="country"
          name="country"
          value="<%= listedit.country %>"
          required
        />
        <div class="valid-feedback">Country looks good</div>
        <div class="invalid-feedback">Give me country</div>
      </div>
      <button class="btn btn-info vutton">Edit</button>
    </div>
  </form>
</body>

